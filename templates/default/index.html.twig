{% extends 'base.html.twig' %}

{% block title %}SnowFlow{% endblock %}

{% block body %}
{% for flashMessage in app.flashes('success') %}
    <div class="alert alert-success">
        {{ flashMessage }}
    </div>
{% endfor %}

{% for flashMessage in app.flashes('error') %}
    <div class="alert alert-danger">
        {{ flashMessage }}
    </div>
{% endfor %}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .webmadewell {
            background-color: white;
        }
        body {
            margin: 0;
        }
        

        h1 {
            font-weight: 500;
        }
        h2 {
            font-weight: 400;
        }
        
    </style>
    <div class="sample-image" style="background-image: url('http://webmadewell.com/wp-content/uploads/2018/01/img-bg-sample-parallax-header.jpg'); background-size: cover; background-position: center; height: 100vh; text-align: center;">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-md-8 offset-md-2">
                <h1 class="text-white">Bienvenue sur SnowTrick</h1>
                <h2 class="text-white">Le blog spécialisé en figures</h2>
                <a href="#figures-section" class="mt-3"><i class="fa-solid fa-arrow-down fa-3x"style="color:white   "></i></a>
            </div>
        </div>
    </div>
</div>

<section id="figures-section" class="sample-section-wrap mt-5" style="background-color: white;">
<div style="margin-top: 150px; text-align: center;" ><h1>Liste des figures</h1></div>
    <div class="sample-section" >
        <div class="container">
            <div class="row row-cols-1 row-cols-md-5 g-4">
                {% for figure in latestFigures %}
                    <div class="col">
                        <div class="card m-3">
                            {% if figure.illustrations is not empty %}
                                <img src="{{ asset('uploads/figures/' ~ figure.illustrations[0]) }}" class="card-img-top" alt="Illustration">
                            {% endif %}
                            <div class="card-body">
                                <h5><a href="{{ path('app_figure_detail', {'id': figure.id}) }}">{{ figure.name }}</a></h5>
                                <div class="btn-group">
                                    {% if app.user %}
                                        {% if figure.userId == app.user.id %}
                                            <a href="{{ path('modifier_figure', {'id': figure.id}) }}" class="btn btn-sm btn-outline-secondary"><i class="fa-solid fa-pen"></i></a>
                                            <a href="{{ path('supprimer_figure', {'id': figure.id}) }}" class="btn btn-sm btn-outline-secondary"><i class="fa-solid fa-trash"></i></a>
                                        {% endif %}
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% if loop.index % 5 == 0 %}
                </div>
                <div class="row row-cols-1 row-cols-md-5 g-4">
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</section>




    </div>
</div>

    </div>
    <script>
        function parallax_height() {
            var scroll_top = $(this).scrollTop();
            var sample_section_top = $(".sample-section").offset().top;
            var header_height = $(".sample-header-section").outerHeight();
            $(".sample-section").css({ "margin-top": header_height });
            $(".sample-header").css({ height: header_height - scroll_top });
        }
        parallax_height();
        $(window).scroll(function() {
            parallax_height();
        });
        $(window).resize(function() {
            parallax_height();
        });
    </script>

{% endblock %}
